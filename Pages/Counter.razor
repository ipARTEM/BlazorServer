    {
        //await Task.Delay(3000);

        otherGames = new List<Game>()
        {
            new Game()
            {
                Name="Test counter",
                Genre="counter",
                ReleaseDate=new DateTime(3021,06,16)
            },

            new Game()
            {
                Name="The Witcher",
                Genre="Action/RPG",
                ReleaseDate=new DateTime(2019,05,16)
            },

            
        };

    }
}

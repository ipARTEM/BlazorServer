@page "/counter"


<div class="row">
    <div class="col alert alert-secondary text-center">
        <h1>Counter</h1>
    </div>

</div>

<div class="row">
    <div class="col-6 text-left ">
        <button class="btn btn-primary p-4" @onclick="IncrementCount">Click me</button>
    </div>
    <div class="col-6 text-right ">
        <div style="font-size:50px">@currentCount</div>
    </div>

</div>
<div class="row">
    <div class="col text-center ">
        <input type="number" class="form-control-lg" @bind="currentCount"/> 
    </div>

</div>

<div class="row">
    <div class="col text-center ">
        <input type="number" class="form-control-lg"  @bind-value="currentCount" @bind-value:event="onchange" />
    </div>

</div>


<p>Current count: @currentCount</p>

<GameListTable Games="otherGames"></GameListTable>



@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    List<Game> otherGames;

    protected override void OnInitialized()
    {
        //await Task.Delay(3000);

        otherGames = new List<Game>()
        {
            new Game()
            {
                Name="Test counter",
                Genre="counter",
                ReleaseDate=new DateTime(3021,06,16)
            },

            new Game()
            {
                Name="The Witcher",
                Genre="Action/RPG",
                ReleaseDate=new DateTime(2019,05,16)
            },

            
        };

    }
}
